package com.kh.example.chap02.loop;

import java.util.Scanner;

public class C_DoWhile {
	
	public void method1() {
		Scanner sc = new Scanner(System.in);
		String str = null;
		
		do {
			System.out.print("문자열 입력 : ");
			str = sc.next();
			System.out.println("str = " + str);
		}while( str =="exit" );
			
		}
		
	}

